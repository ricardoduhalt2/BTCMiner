# BTCMiner Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to Git!

# ⚠️  CRITICAL: Replace ALL placeholder values with your actual keys
# ⚠️  NEVER use the same keys that were previously exposed

# Deployment wallet key (without 0x prefix)
# Generate a NEW wallet - the old one is compromised!
PRIVATE_KEY=your_new_deployment_key_here

# RPC URLs for different networks
SEPOLIA_RPC_URL=https://eth-sepolia.public.blastapi.io
BSC_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545/
BASE_GOERLI_RPC_URL=https://goerli.base.org
BASE_SEPOLIA_RPC_URL=https://eth-sepolia.public.blastapi.io

# Additional testnets for future expansion
MUMBAI_RPC_URL=https://polygon-mumbai.infura.io/v3/YOUR_INFURA_KEY
ARBITRUM_GOERLI_RPC_URL=https://arbitrum-goerli.infura.io/v3/YOUR_INFURA_KEY

# API Keys for contract verification
# Generate NEW keys - old ones are compromised!
ETHERSCAN_API_KEY=your_new_etherscan_api_key
BSCSCAN_API_KEY=your_bscscan_api_key
BASESCAN_API_KEY=your_basescan_api_key
POLYGONSCAN_API_KEY=your_polygonscan_api_key
ARBISCAN_API_KEY=your_arbiscan_api_key

# Gas reporting
REPORT_GAS=true

# LayerZero Endpoint Addresses (Testnet)
LZ_ENDPOINT_SEPOLIA=0xae92d5aD7583AD66E49A0c67BAd18F6ba52dDDc1
LZ_ENDPOINT_BSC_TESTNET=0x6Fcb97553D41516Cb228ac03FdC8B9a0a9df04A1
LZ_ENDPOINT_BASE_SEPOLIA=0x6EDCE65403992e310A62460808c4b910D972f10f
LZ_ENDPOINT_MUMBAI=0xf69186dfBa60DdB133E91E9A4B5673624293d8F8
LZ_ENDPOINT_ARBITRUM_GOERLI=0x6aB5Ae6822647046626e83ee6dB8187151E1d5ab

# Supabase Configuration - GENERATE NEW KEYS!
# The old keys are compromised and must be rotated immediately
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_new_supabase_anon_key
VITE_SUPABASE_SERVICE_ROLE_KEY=your_new_supabase_service_role_key

# Frontend Development Configuration
VITE_APP_NAME=BTCMiner
VITE_APP_VERSION=1.0.0
VITE_API_URL=http://localhost:3001
VITE_WS_URL=ws://localhost:3001
VITE_ENABLE_WEBSOCKET=false

# WalletConnect Configuration
VITE_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_PWA=true